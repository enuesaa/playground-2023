{
  "extends": "../../tsconfig.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "target": "es2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "emitDeclarationOnly": true,
    "incremental": true,
    "module": "es2022",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "outDir": "dist"
  }
}
