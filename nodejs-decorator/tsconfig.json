{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2022",
    "esModuleInterop": true,
    "outDir": "./dist",
    "strict": true,
    "allowJs": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}